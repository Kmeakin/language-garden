(rule
  (with-stdin-from capture-nothing.txt
    (with-stdout-to capture-nothing.stdout.tmp
      (run %{bin:closure-conv} elab))))

(rule
  (alias runtest)
  (package compile-closure-conv)
  (action (diff capture-nothing.stdout
                capture-nothing.stdout.tmp)))


